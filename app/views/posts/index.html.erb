<div id="post_index_wrapper" class="wrapper">
  <%# if @post.present? %>
    <h1>Posts</h1>
    <% @posts.each do |post| %>
      <div id="indivisual">
        <div id="title">
          <h1><%= link_to post.title, post %></h1>
        </div>
        <div id="body">
          <p><%= post.body.first(200) %>...<%= link_to "read more", post %></p>
        </div>
        <% if logged_in? %>
          <div id="admin">
            <div class="admin-uses"><%= link_to 'Edit', edit_post_path(post) %></div>
            <div class="admin-uses"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          </div>
        <% end %>
      </div>
    <%end%>
  <%#else%>
    <!--<h1 style="line-height: 100px;">Sorry, but the author has <br>not uploaded any new posts yet...</h1>-->
  <%# end %>
</div>
