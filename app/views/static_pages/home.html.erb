<div id="home_container" class = "wrapper">
  <div id="home_header" class="header">
    <div id="date">Some date</div>
    <%= image_tag("cubes.jpg")%>
    <h1>Balaram Parajuli</h1>
  </div>
  <div id="top_left">
    <div class="header section_header">
      <%= link_to 'Recent Posts', Post %>
    </div>
    <% @posts.last(3).each do |post| %>
      <div id="indivisual">
        <div id="title">
          <h1><%= link_to post.title, post %></h1>
        </div>
        <div id="body">
          <p><%= post.body.first(200) %>...<%= link_to "read more", post %></p>
        </div>
      </div>
    <%end%>
  </div>
  <div id="top_right">
    <div class="header section_header">
      Slide Show
    </div>
    <div id="home_slide_show">
      <ul class="rslides">
          <ul><img src="cubes.jpg" id="home_img-pants" alt=""><div id="home_fade_in"><h1>Pants, Jeans, and Everything</h1></div></ul>
          <ul><img src="cubes.jpg" id="home_img-shirts" alt=""><div id="home_fade_in"><h1>Shirts, T-shirts, and Everything</h1></div></ul>
          <ul><img src="cubes.jpg" id="home_img-accessories" alt=""><div id="home_fade_in"><h1>Hats, Jewlery, and Glasses</h1></div></ul>
          <ul><img src="cubes.jpg" id="home_img-suits" alt=""><div id="home_fade_in"><h1>Suits Of All kinds</h1></div></ul>
      </ul>
    </div>
  </div>
</div>
